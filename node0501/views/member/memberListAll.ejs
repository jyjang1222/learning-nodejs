<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">
  <title>회원목록</title>
  <link rel="stylesheet" href="css/main.css">
</head>

<body>
  <%- include('../top.ejs') %>
  <%- include('../nav.ejs') %>
  <div align="center">
    <br><br>
    <h2>회원목록</h2>
    <br>

    <table>
      <tr align="center">
        <td colspan="5" width="265px">
          <form action="memberListSort">
            <select name="sortStandard" style="width: 200px;">
              <option value="memberNo">번호</option>
              <option value="memberId">아이디</option>
              <option value="memberName">이름</option>
              <option value="memberEmail">이메일</option>
            </select>
            <input type="submit" value="정렬하기">
          </form>
        </td>
      </tr>
    </table>
    <br>

    <table border="1">
      <tr align="center">
        <th width="100px">번호</th>
        <th width="100px">아이디</th>
        <th width="100px">이름</th>
        <th width="100px">이메일</th>
        <th width="50px">수정</th>
        <th width="50px">삭제</th>
      </tr>
      <% for (const member of memberDB) { %>
      <tr>
        <td><%= member.memberNo %></td>
        <td><%= member.memberId %></td>
        <td><%= member.memberName %></td>
        <td><%= member.memberEmail %></td>
        <td><button onclick="location.href='memberUpdateForm?memberNo=<%= member.memberNo %>'">수정</button></td>
        <td><button onclick="location.href='memberDeleteForm?memberNo=<%= member.memberNo %>'">삭제</button></td>
      </tr>
      <% } %>
    </table>
  </div>
  <br><br>
  <%- include('../footer.ejs') %>
</body>

</html>